@model EventsManager.ViewModels.AccountModel.LoginModel
@{
    Layout = null;
    ViewBag.Title = "Login";
}

<title>@ViewBag.Title</title>
<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />
<link rel="icon" href="~/favicon.ico" type="image/x-icon" />
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
<script src="~/Scripts/modernizr-2.6.2.js"></script>

<body>
    <div class="container-fluid" style="padding: 0 !important;">
        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-4" style="height:100%;background-color:white;">
                    <div class="centerVertically">
                        <center>
                            <span class="text">Event Manager</span>
                            <br />
                            <img src="~/Images/hopprlab_logo_text_only.png" width="100" height="20" />
                            <br />
                        </center>
                        <div class="form-bottom">
                            <span style="color:black;">@Html.ValidationSummary(false)</span>
                            @using (Html.BeginForm("Index", "Account", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    @Html.TextBoxFor(b => b.username, new
                            {
                                @class = "input-size inputuser",
                                @placeholder = "Username"
                            })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(b => b.password, new
                            {
                                @class = "input-size inputpass",
                                @placeholder = "Password"
                            })
                                    <br />
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-login">Login</button>
                                </div>
                            }
                        </div>
                    </div> 
                </div>
                <div class="col-lg-8 right-side-background hidden-md hidden-sm hidden-xs">
                    <div class="overlay">
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
